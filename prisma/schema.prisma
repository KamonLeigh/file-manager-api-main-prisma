// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id          String        @id @default(uuid())
  name        String
  directory   Directory     @relation(fields: [directoryId], references: [id])
  directoryId String
  ancestors   String[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  version     FileVersion[]
  deletedAt   DateTime?
  @@map("files")
}

model FileVersion {
  id        String   @id @default(uuid())
  name      String
  mimeType  String
  key       String
  size      Int
  file      File     @relation(fields: [fileId], references: [id])
  fileId    String
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt   DateTime?      

  @@map("file_versions")
}

// onDelete: Cascade -- this will delete for example related entries on other tables
// There is also an update feature

model Directory {
  id          String      @id @default(uuid())
  name        String
  parent      Directory?  @relation("DirectoryToDirectory", fields: [parentId], references: [id])
  parentId    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  files       File[]
  ancestors   String[]
  deletedAt   DateTime?
  directories Directory[] @relation("DirectoryToDirectory")


  @@map("directories")
}
